#include <iostream>
 
using namespace std;
 
int main() {
    
 
    int q;
    cin >> q;
 
    while (q--) {
        int a, b; cin >> a >> b;
        if (b == 1) {
            cout << "NO" << endl;
        }
        else {
            cout << "YES" << endl;
            cout << a << ' ' << a * (long long)b << ' ' << a * (long long)(b + 1) << endl;
        }
    }
}
